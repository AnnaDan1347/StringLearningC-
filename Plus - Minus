à íå÷åòíóþ – ìèíóñàìè â êîëè÷åñòâå ðàâíîì çíà÷åíèþ öèôðû.*/
#include <iostream>
#include <cstring>
#include <stdlib.h>

using namespace std;

#define N 128

int main(){
	char text[N];
	int num = 0;
	cout << "Input text";
	cin.getline(text, N);
	
	for (int i = 0; i < N; i++) {
		if (text[i] > 47 && text[i] < 58) {
			num = text[i]-'0';			
			for (int j = strlen(text); j > i; j--) {
				text[j + num - 1] = text[j];
			}
			if (num % 2 == 0) {
				for (int j = i; j < i + num; j++){
					text[j] = '+';
				}	
			} 
			else {
				for (int j = i; j < i + num; j++){
					text[j] = '-';
				}
			}
		}
	}
		for (int i = 0; i < strlen(text); i++){
			cout << text[i];
		}
return 0;
}
